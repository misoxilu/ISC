<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:ISC.View" 
    x:Class="ISC.View.FileView" 
    mc:Ignorable="d"
    xmlns:vm="clr-namespace:ISC.ViewModel"
    d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="ItemContainerStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding Loaded}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <ListBox
            x:Name="Listbox" 
            ItemsSource="{Binding Files}" SelectedItem="{Binding SelectedItem,Mode=OneWayToSource}"
            Template="{Binding FileListboxControlTemplate}" 
            ItemTemplate="{Binding FileListboxDataTemplate}"
            ItemContainerStyle="{StaticResource ItemContainerStyle }"/>
    </ScrollViewer>

</UserControl>